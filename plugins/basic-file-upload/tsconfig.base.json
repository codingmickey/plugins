{
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "target": "es2021",
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ]
}